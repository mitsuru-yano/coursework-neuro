{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@layout/*": ["components/layout/*"],
            "@ui/*": ["components/ui/*"],
            "@modules/*": ["components/modules/*"],
            "@assets/*": ["assets/*"],
            "@services/*": ["services/*"],
            "@pages/*": ["pages/*"],
            "@context/*": ["context/*"],
            "@styles/*": ["styles/*"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["src"]
}
